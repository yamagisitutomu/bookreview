<div class="container">
  <div class="row  justify-content-center">
    <div class="col-md-8 ">
      <h4>新規会員登録</h4>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
            <table>
                <tr>
                  <th>名前</th>
                  <th class="field">
                    <%= f.text_field :name %>
                  </th>
                </tr>
                <tr>
                  <th class="field">メールアドレス</th>
                  <th class="field">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
                  </th>
                </tr>
                <tr>
                  <th class="field">生年月日</th>
                  <th class="field">
                    <%= f.date_field :birthdate %>
                  </th>
                </tr>
                <tr>
                  <th class="field">性別</th>
                  <th class="field">
                    <%= f.select :gender, ['男性', '女性', 'その他'] %>
                  </th>
                </tr>
                <tr>
                   <th>パスワード（6文字以上）</th>
                　 <th class="field">
                     <% if @minimum_password_length %>
                  <!--em>(<!%= @minimum_password_length %> characters minimum)</em-->
                     <% end %>
                     <%= f.password_field :password, autocomplete: "new-password" %>
                   </th>
                </tr>
                <tr>
                   <th class="field">パスワード（確認用）</th>
                   <th>
                     <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
                   </th>
                </tr>
                <tr>
                   <th class="actions">
                     <%= f.submit "新規登録" %>
                   </th>
                </tr>
                <tr>
                   <th>既に登録済みの方</th>
                   <th><%= link_to "こちら",new_customer_session_path %>からログインしてください。</th>
                </tr>
            </table>
        <% end %>
    </div>
  </div>
</div>